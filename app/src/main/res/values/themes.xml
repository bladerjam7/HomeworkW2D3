<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeworkW2D3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FA4091</item>
        <item name="colorPrimaryVariant">#FF0471</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HomeTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/anton_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HomeTitleBorder">
        <item name="android:background">@drawable/title_border</item>
    </style>

    <style name="EquipmentItemListTextName">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EquipmentItemListTextPrice" parent="EquipmentItemListTextName">

    </style>

    <style name="EquipmentDetailName" parent="EquipmentItemListTextName">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/staatliches_regular</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="EquipmentDetailPrice">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/roboto_mono_italic_variable_font_wght</item>
    </style>

    <style name="EquipmentDetailDescription">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/merriweather_sans_regular</item>
    </style>

    <style name="Buttons">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/passion_one_regular</item>
    </style>


</resources>